<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:id="@+id/linear2"
    >

    <TextView
        android:id="@+id/sg_grname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#1418EA"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sg_playersnumber"
        android:textColor="#1418EA"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sg_isprivate"
        android:textColor="#1418EA"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/gr_name2"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="18sp"
        android:textColor="#1418EA"

        />



    <TextView
        android:id="@+id/gr_starth1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#1418EA"
        android:text="start hour"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/gr_endh1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#1418EA"
        android:text="end hour"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/gr_id2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:visibility="invisible"/>


</LinearLayout>